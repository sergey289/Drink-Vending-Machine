<UserControl x:Class="Drinks_Vending_Machine.Addition_Hot_Chocolate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Drinks_Vending_Machine"
             mc:Ignorable="d" 
             d:DesignWidth="259" Height="256.974">
    <Grid Background="Gainsboro">
        <RadioButton x:Name="rad_sugrarless" Content="Sugarless" Margin="72,64,10,0" VerticalAlignment="Top" FontSize="15" Checked="rad_sugrarless_Checked"/>
        <RadioButton x:Name="rad_Whipped_cream" Content="Whipped cream" Margin="72,94,10,0" VerticalAlignment="Top" Checked="rad_Whipped_cream_Checked" FontSize="15"/>
        <RadioButton x:Name="rad_Marshmallows" Content="Marshmallows" Margin="72,131,10,0" VerticalAlignment="Top"  FontSize="15" Checked="rad_Marshmallows_Checked"/>
    </Grid>
</UserControl>
