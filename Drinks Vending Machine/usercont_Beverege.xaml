<UserControl x:Class="Drinks_Vending_Machine.usercont_Beverege"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Drinks_Vending_Machine"
             mc:Ignorable="d" Background="Gainsboro" Height="124.583" Width="104.898" VerticalAlignment="Top">
    <Grid Background="Gainsboro" HorizontalAlignment="Left" >
        <Image x:Name="img_logo" HorizontalAlignment="Left" Height="50" Margin="21,7,0,0" VerticalAlignment="Top" Width="60" Source="Resources/mocaccino.png" RenderTransformOrigin="0.455,0.032"/>
        <TextBlock x:Name="txt_name" HorizontalAlignment="Left" Margin="10,60,0,0" TextWrapping="Wrap" Text="Mocaccino" VerticalAlignment="Top" FontFamily="Trebuchet MS" Width="84" TextAlignment="Center" FontSize="10"/>
        <TextBlock x:Name="txt_price" HorizontalAlignment="Left" Margin="22,79,0,0" TextWrapping="Wrap" Text="3$" VerticalAlignment="Top" FontFamily="Trebuchet MS" Width="54" TextAlignment="Center" FontSize="10"/>
        <Button x:Name="btn_choce" Content="Сhoose" HorizontalAlignment="Left" Margin="20,97,0,0" VerticalAlignment="Top" Width="59" Height="19" FontFamily="Viner Hand ITC" Background="#FF93F789" Click="btn_choce_Click"/>
    </Grid>
</UserControl>
